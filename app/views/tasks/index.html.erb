<div class="container text-center">
<h1>Tasks to be done</h1>
</div>

<div class="container text-center">
  <h2><%= link_to "Add a new task", new_task_path %></h2>
</div>

<div class="container text-center">
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <h3><%= task.name %></h3>
        <p><%= link_to "See task", task_path(task) %></p>
        <p><%= link_to "Edit task", edit_task_path(task) %></p>
        <p><%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
      </div>
    <% end %>
  </div>
</div>
